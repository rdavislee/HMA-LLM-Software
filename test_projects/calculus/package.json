{
  "name": "my-typescript-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "node tools/run-mocha.js",
    "test:verbose": "node tools/run-mocha.js --reporter spec --grep '.*'",
    "test:watch": "node tools/run-mocha.js --watch",
    "compile": "node tools/compile-typescript.js",
    "interactive": "node tools/run-tsx.js interactive_calculator.ts"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "spec": "test/**/*.test.ts",
    "reporter": "spec",
    "full-trace": true,
    "bail": false,
    "timeout": 5000
  },
  "dependencies": {
    "chai": "file:./npm-packages/chai-4.3.8.tgz",
    "@types/chai": "file:./npm-packages/types-chai-4.3.11.tgz"
  },
  "devDependencies": {
    "mocha": "file:./npm-packages/mocha-10.2.0.tgz",
    "@types/mocha": "file:./npm-packages/types-mocha-10.0.6.tgz",
    "@types/node": "file:./npm-packages/types-node-20.11.0.tgz"
  }
}