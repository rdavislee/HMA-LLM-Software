# HMA-LLM Backend Configuration
# Copy this file to the project root as .env and fill in your values

# Server Configuration
HMA_HOST=localhost
HMA_PORT=8080

# Database Configuration (SQLite file path)
DATABASE_URL=sqlite:///./hma_llm.db

# LLM Provider API Keys (at least one required)
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Docker Configuration (optional)
DOCKER_AVAILABLE=true
DOCKER_HOST=unix:///var/run/docker.sock

# Container Configuration  
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5
CONTAINER_IDLE_TIMEOUT=1800
CONTAINER_IMAGE=ubuntu:22.04

# WebSocket Configuration
WS_PATH=/ws
WS_CORS_ORIGINS=*

# Development/Debug Settings
LOG_LEVEL=INFO
DEBUG=false

# Database Cleanup (days)
CLEANUP_OLD_SESSIONS_DAYS=90 